@model Product

@{
    ViewData["Title"] = "Details Page";
}


<div class="container px-4 px-lg-5 my-4">
    <div class="row gx-4 gx-lg-5 align-items-center">
        <div class="col-md-6">
            <img class="card-img-top mb-5 mb-md-0" src="~/@Model.ImageUrl" title="Product image"/>
        </div>
        <div class="col-md-6">
            <div class="small mb-1">@Model.Category.Name</div>
            <h1 class="display-5 fw-bolder">@Model.Name</h1>
            <div class="fs-5 mb-5">
                <span class="text-decoration-line-through">$@(Model.Price + Model.Price*0.2m)</span>
                <span>$@Model.Price</span>
                <p class="lead">
                    @Model.Description
                </p>

                <div class="d-flex">
                    <input  class="form-control text-center me-3" id="inputQuantity" type="number" min="1" max="100" value="1" style="max-width:3rem" />
                    <button onclick="addToCart(@Model.Id)" class="btn btn-outline-dark flex-shrink-0" type="button">
                        <i class="bi-cart-fill me-1"></i>
                        Add to cart
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="/js/cart.js"></script>
}