
@{
    ViewData["Title"] = "Cancel";
    Layout = "_Customer";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="text-center">Payment Canceled</h4>
                </div>
                <div class="card-body text-center">
                    <h5>We're sorry! Your payment was canceled.</h5>
                    <p class="text-muted">
                        If you did this by mistake or you want to complete the order, you can return to your cart and try again.
                    </p>
                    <div class="my-4">
                        <img src="https://via.placeholder.com/150" alt="Cancel Image" class="img-fluid">
                    </div>
                    <a asp-action="Index" asp-controller="Cart" class="btn btn-primary btn-lg">Return to Cart</a>
                </div>
                <div class="card-footer text-muted text-center">
                    Need help? <a href="/support">Contact Support</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="/js/cart.js"></script>
}