@model ProductCategoryVM

@{
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "Create Product";

    SelectList categoryItems = 
    new SelectList(Model.Categories, "Id", "Name");
}

<div class="row justify-content-around">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input type="file" onchange="fillImage(event)" name="uploadFile" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId"
                        asp-items="categoryItems"
                        class="form form-control">
                </select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <img id="image-preview" class="w-75 h-50 mt-5"  />
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>

    const ImageElement = document.getElementById("image-preview");
    const fillImage = (event) => {
        ImageElement.src = URL.createObjectURL(event.target.files[0]);
    }

</script>