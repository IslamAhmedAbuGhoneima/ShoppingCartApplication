@model List<Category>

@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "Category List";
}



<div>
    <a asp-action="Create" asp-controller="Category" class="btn btn-primary">Create</a>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Date created</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Category item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.CreatedAt</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
                
            </tr>
        }
    </tbody>
</table>
